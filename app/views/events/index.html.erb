<h1>Listing events</h1>

<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Location Set?</th>
    <th>Location</th>
    <th>Time</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.description %></td>
    <td><%= event.settimeorloc %></td>
    <td><%= event.finalloc %></td>
    <td><%= event.finaltime.strftime "I:%M %p" %></td>
    <td><%= event.user_id %></td>
    <td><%= link_to 'Show', event, class: 'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-warning' %></td>
    <td><%= link_to 'Delete', event, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

