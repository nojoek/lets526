<h1>Listing ballots</h1>

<table class="table table-hover">
  <tr>
    <th>Loc1</th>
    <th>Loc2</th>
    <th>Loc3</th>
    <th>Loc4</th>
    <th>Time1</th>
    <th>Time2</th>
    <th>Time3</th>
    <th>Time4</th>
    <th>Event</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ballots.each do |ballot| %>
  <tr>
    <td><%= ballot.loc1 %></td>
    <td><%= ballot.loc2 %></td>
    <td><%= ballot.loc3 %></td>
    <td><%= ballot.loc4 %></td>
    <td><%= ballot.time1.strftime "I:%M %p" %></td>
    <td><%= ballot.time2.strftime "I:%M %p" %></td>
    <td><%= ballot.time3.strftime "I:%M %p" %></td>
    <td><%= ballot.time4.strftime "I:%M %p" %></td>
    <td><%= ballot.event.title %></td>
    <td><%= ballot.user.name %></td>
    <td><%= link_to 'Show', ballot %></td>
    <td><%= link_to 'Edit', edit_ballot_path(ballot) %></td>
    <td><%= link_to 'Destroy', ballot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ballot', new_ballot_path %>
